<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
    <%- include("../partials/header.ejs") %>


    <main>
<div>
    <a href="/animals/new"><button>Add a new animal</button></a>
    <% for(animal of animals) { %>
    <article>
        <a href="/animals/<%= animal._id %>">
            <h2>
                <%= animal.name %><br>
                <%= animal.extinct ? "Alive" : "Extinct" %><br>
                <%= animal.location %>
                <%= animal.lifeExpectancy %>
            </h2>
        </a>
    </article>
    <% } %>
</div>
    </main>

</body>
</html>